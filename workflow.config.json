{
  "workflow_description": {
    "name": "methylation_calling",
    "version": 1.0,
    "label": "methylation calling",
    "type": "alignment_dna",
    "inputs": "*/{sample}*fastq.gz",
    "outputs": [
      "mapped/{sample}.bam",
      "mapped/{sample}.bam.bai",
      "logs/{sample}/*",
      "qc_reports/*",
      "methylation_calling/*"
    ],
    "report_index": "qc_reports/all_samples/alignment_DNA_multiqc/multiqc.html",
    "reports":[
       "qc_reports/*"
    ]
  },
  "general_params": [
    "entity_name",
    "sample_name"
  ],
  "requested_params": [
    "is_paired",
  ],
  "gui_params": {
    "primary": {
      "enrichment_method": {
        "label": "Enrichment Type",
        "type": "enum",
        "default": "whole_genome",
        "list": {
          "RRBS_MspI": "RRBS MspI",
          "RRBS_MseI": "RRBS MseI",
          "target_enrichment": "target enrichment",
          "whole_genome": "whole genome"
        },
      "type_seq": {
        "label": "Seq Type",
        "type": "enum",
        "default": "BS_seq",
        "list": {
          "BS_seq": "Bisulfite-Seq",
          "pbat_seq": "PBAT-seq",
          "em_seq": "EM-seq"
        }
      },
      "lib_ROI": {
        "label": "Regions of interest",
        "type": "enum",
        "default": "wgs",
        "list": ##INCLUDE:reference_info/lib_ROI.json##
      },
      "reference": {
        "label": "Genomic Reference",
        "type": "enum",
        "default": ##INCLUDE:reference_info/default_reference.json##,
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "lib_ROI": "wgs"
            }
          }
        },
        "list": ##INCLUDE:reference_info/reference2.json##
      }
    },
    "detailed": {
      "methylation_calling": {
        "label": "Call methylation values",
        "type": "bool",
        "default": true
      },
      "keep_not_markDups_bam": {
        "label": "Keep not_markDups_bam file",
        "type": "bool",
        "default": false
      }
    }
  }
}

